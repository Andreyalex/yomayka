<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>

        <field name="name" type="text" size="40" class="inputbox"
               label="COM_YOSHOP_FORM_LBL_PRODUCT_NAME"
               description="COM_YOSHOP_FORM_DESC_PRODUCT_NAME"
               filter="safehtml"
                />

        <!--<field name="price_base" type="text" size="40" class="inputbox"-->
               <!--label="COM_YOSHOP_FORM_LBL_PRODUCT_PRICE"-->
               <!--description="COM_YOSHOP_FORM_DESC_PRODUCT_PRICE"-->
               <!--filter="numeric"-->
                <!--/>-->

        <field
                name="category_id"
                type="category" extension="com_yoshop"
                label="COM_YOSHOP_FORM_LBL_PRODUCT_CATEGORY"
                description="COM_YOSHOP_FORM_DESC_PRODUCT_CATEGORY"
                />

        <field
                name="images"
                type="productimages"
                label="COM_YOSHOP_FORM_LBL_PRODUCT_IMAGES"
                description="COM_YOSHOP_FORM_DESC_PRODUCT_IMAGES"
                />

        <field name="count" type="text" size="40" class="inputbox"
               label="COM_YOSHOP_FORM_LBL_PRODUCT_COUNT"
               description="COM_YOSHOP_FORM_DESC_PRODUCT_COUNT"
               filter="numeric"
                />

        <field name="description" type="textarea"

               label="COM_YOSHOP_FORM_LBL_PRODUCT_DESCRIPTION"
               description="COM_YOSHOP_FORM_DESC_PRODUCT_DESCRIPTION"


               cols="100"
               rows="8"
               filter="safehtml"/>

        <field
                name="state"
                type="list"
                label="COM_YOSHOP_CONDITION_STATUS"
                description="COM_YOSHOP_CONDITION_STATUS_DESC"
                class="inputbox"
                size="1"
                default="1">
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>
        <field
                name="condition"
                type="list"
                label="COM_YOSHOP_CONDITION"
                description="COM_YOSHOP_CONDITION_DESC"
                class="inputbox"
                size="1"
                default="4">
            <option value="1">COM_YOSHOP_CONDITION_1</option>
            <option value="2">COM_YOSHOP_CONDITION_2</option>
            <option value="3">COM_YOSHOP_CONDITION_3</option>
            <option value="4">COM_YOSHOP_CONDITION_4</option>
            <option value="5">COM_YOSHOP_CONDITION_5</option>
            <option value="6">COM_YOSHOP_CONDITION_NEW</option>
        </field>

        <field
                name="regions"
                type="regions"
                label="COM_YOSHOP_REGIONS"
                description="COM_YOSHOP_REGIONS_DESC"
                class="inputbox"
                size="1"
                default="4"
        />

        <!--<field name="created_by" type="createdby" default=""-->
               <!--label="COM_YOSHOP_FORM_LBL_PRODUCT_CREATED_BY"-->
               <!--description="COM_YOSHOP_FORM_DESC_PRODUCT_CREATED_BY"/>-->


        <!--<field name="checked_out" type="hidden" filter="unset"/>-->
        <!--<field name="checked_out_time" type="hidden" filter="unset"/>-->
        <field name="id" type="hidden"/>


    </fieldset>

</form>
